<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="Infinity" maxWidth="Infinity"
            minHeight="400.0" minWidth="300.0"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #0d1b2a;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.MainWindow">
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   AnchorPane.bottomAnchor="1.0"
                   AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="76.0"
                   style="-fx-background-color: #1b263b; -fx-text-fill: white; -fx-prompt-text-fill: #778da9;" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="76.0"
                text="Send"
                AnchorPane.bottomAnchor="1.0"
                AnchorPane.rightAnchor="0.0"
                style="-fx-background-color: #415a77; -fx-text-fill: white;" />
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    fitToWidth="true"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.bottomAnchor="42.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    style="-fx-background: #0d1b2a; -fx-background-color: #0d1b2a;">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>