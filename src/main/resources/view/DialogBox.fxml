<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         >
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true"
               minHeight="-Infinity" maxWidth="300.0"
               style="-fx-text-fill: white; -fx-background-color: #b83b60; -fx-background-radius: 10 10 10 0; -fx-padding: 10;"
               HBox.hgrow="NEVER">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="70.0" fitWidth="70.0"
                   pickOnBounds="true" preserveRatio="true">
            <clip>
                <Circle centerX="35.0" centerY="35.0" radius="35.0" />
            </clip>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</fx:root>